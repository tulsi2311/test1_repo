<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/editprofile.css" />
</head>
<body class="body-edit">
    
<div class="wholeweb">

    <div class="boxdata">
<div class="txtdataedit">


<div class="topflx ">
<div class="topflx1 ">


    <div onclick="history.back()"  class="top1">
        <i class="fa fa-close" style="font-size:24px"></i>

    </div>
    <div class="top2">
        <h3 class="h3data">Edit Profile</h3>
    </div>
</div>

    <form action="/prof/updateprof" method="post" onsubmit="return validate()" enctype="multipart/form-data">
    <div class="savebtn">
        <!-- <a  class="savebtn1" href="/prof/updateprof">Save</a> -->
        <input class="savebtn1" type="submit" value="save">
    </div>

</div>




<div class="card1">
    <div class="card_background_img1">
    </div>

    <div class="card_profile_img1">
        <img src="<%=edit_query[0].user_image%>">
        <div class="cover_img">
            <label for="image1">
                <i class="material-icons">add_a_photo</i>
                <input type="file" id="image1" name="img" style="display: none;">
            </label>
          
            
         </div>
 
         <!-- <img src="/files/1a83c828b67134a9b2ab348a0fb5d807" alt=""> -->
    </div>
   


    <div class="col m-2">
        <input placeholder="name" id="name" name="user_name" type="text" class="form-control " id="inputEmail3" value="<%=edit_query[0].name %>">
        <p id="err1"></p>
    </div>
      <div class="col  m-2 "> <input id="bio" placeholder="bio" name="user_bio" type="text" class="form-control textarea" id="inputEmail3" value="<%=edit_query[0].bio%>" >
        <p id="err2"></p></div>


    <div class="editdata">
        <label for="exampleFormControlInput1"  class="form-label"> Birth Date :</label> <input type="date" id="dob" name="dob" class="bdate" value="<%=date%>">
        <p id="err3"></p>
        <!-- <label for="exampleFormControlInput1" class="form-label"></label> -->
    </div>

</div>
</form>




    </div>

</div>
</div>
<script>
    function validate(){
        var name=document.getElementById("name").value
        var bio=document.getElementById("bio").value
        var dob=document.getElementById("dob").value

        if(name.trim()==""){
           document.getElementById("err1").innerHTML="please enter name"
           return false
        }else if(bio.trim()==""){
            document.getElementById("err2").innerHTML="please enter bio"
           return false
        }else if(dob.trim()==""){
            document.getElementById("err3").innerHTML="please enter dob"
           return false
        }else{
            return true
        }
    }
</script>
</body>
</html>
