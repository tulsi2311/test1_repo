                        <% } %>
                  </div>

                  <div class="nameandtime">

                    <div class="flex1">

                      <div class="tweetname">

                        <p class="tweetnamed">
                          <%=profile_data.name%>
                        </p>
                        <p class="tweetnamed">
                          <%=profile_data.user_name%>
                        </p>

                      </div>


                    </div>
                    <div class="tweetdatamain">

                      <h5 class="tweetdatatxt"></h5>
                      <div>


                        <p class="skill">
                          <%=data[i].description%>
                        </p>


                        <% if(data[i].media_url==null) { console.log("nothing") }else{ %>
                          <% const file_extension=data[i].media_url.slice(((data[i].media_url.lastIndexOf('.') - 1)>>>
                            0) + 2);
                            if (array_of_allowed_files.includes(file_extension)) { %>
                            <img id="tweet_img" src="<%=data[i].media_url%>" />

                            
                            <% }else{ %>
                              <video width="320" height="240" controls>
                                <source src="<%=data[i].media_url%>" type="video/mp4">
                              </video>
                              
                              <% }}%>

                              <div>
                                <div class="profInsta">
                                  <div class="icon_row">
                                    <div class="icon_tab">
                                      <div class="icon_tab">
                                        <i id="heart1" class="fa fa-thumbs-up" onclick="likepost()"></i>
  
                                        <p>
                                          <%=arr2[i]%>
                                        </p>
  
                                      </div>
  
                                      <div class="icon_row">
                                        <div class="icon_tab">
                                          <a href=""><i class="fas fa-comment"></i></a>
                                          <p>
                                            <%=arr3[i]%>
